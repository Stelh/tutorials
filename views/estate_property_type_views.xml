<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stats Button Actions -->
    <record id="action_estate_property_offer" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

    <!-- Property Type Offer List View -->
    <record id="estate_property_type_offer_list_view" model="ir.ui.view">
        <field name="name">estate.property.type.offer.list.view</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="property_id"/>
                <field name="validity"/>
                <field name="create_date"/>
                <field name="date_deadline"/>
            </list>
        </field>
    </record>

    <!-- Property Type Root Menu -->
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Estate Property Type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Property Type List View -->
    <record id="estate_property_type_list_view" model="ir.ui.view">
        <field name="name">estate.property.type.list.view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="offer_count"/>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Property Type Form View -->
    <record id="estate_property_type_form_view" model="ir.ui.view">
        <field name="name">estate.property.type.form.view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="%(action_estate_property_offer)d" type="action" class="oe_stat_button" icon="fa-list">
                        <field name="offer_count" widget="statinfo" string="Offers"/>
                    </button>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids" string="">
                                <list>
                                    <field name="name"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>